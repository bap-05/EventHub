<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    app:cardCornerRadius="14dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="icon"
                android:src="@drawable/sukienlogosamset" />

            <TextView
                android:id="@+id/tv_event_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Su kien" />

            <ImageView
                android:id="@+id/icon_qr"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="6dp"
                android:contentDescription="QR"
                android:src="@drawable/qr"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/icon_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Edit"
                android:src="@drawable/ic_edit"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_event_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="#4F4F4F"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="Ma su kien: 0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_priority"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:contentDescription="priority"
                android:src="@drawable/flaghigh" />

            <TextView
                android:id="@+id/tv_event_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="High"
                android:textColor="#FF4D4F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_event_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text=""
                android:textColor="#4F4F4F"
                android:textSize="12sp"
                tools:text="Dang dien ra" />
        </LinearLayout>

        <View
            android:id="@+id/progress_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_progress_bar" />

        <LinearLayout
            android:id="@+id/avatar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="avt1"
                android:src="@drawable/avatar" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="-10dp"
                android:contentDescription="avt2"
                android:src="@drawable/avatar" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="-10dp"
                android:contentDescription="avt3"
                android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/tv_event_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_outline_green"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:text=""
                android:textColor="#32B768"
                android:textSize="12sp"
                tools:text="0/0" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_start"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="start"
                    android:src="@drawable/calendarduoiphansukiensapdienra" />

                <TextView
                    android:id="@+id/tv_event_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text=""
                    android:textColor="#4F4F4F"
                    android:textSize="12sp"
                    tools:text="27/12" />

                <ImageView
                    android:id="@+id/icon_end"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="end"
                    android:src="@drawable/calendarduoiphansukiensapdienra" />

                <TextView
                    android:id="@+id/tv_event_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text=""
                    android:textColor="#4F4F4F"
                    android:textSize="12sp"
                    tools:text="27/12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="14dp"
    android:background="@color/white"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/sukienlogosamset"
                android:contentDescription="icon" />

            <TextView
                android:id="@+id/tv_event_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Sự kiện mẫu"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/icon_qr"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/qr"
                android:visibility="gone"
                android:contentDescription="QR" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <ImageView
                android:id="@+id/icon_priority"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/flaghigh"
                android:contentDescription="priority" />

            <TextView
                android:id="@+id/tv_event_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="High"
                android:textColor="#FF4D4F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_event_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Đang diễn ra"
                android:textColor="#4F4F4F"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:id="@+id/progress_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_progress_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/avatar"
                android:contentDescription="avt1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="-10dp"
                android:src="@drawable/avatar"
                android:contentDescription="avt2" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="-10dp"
                android:src="@drawable/avatar"
                android:contentDescription="avt3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginEnd="4dp">

                <ImageView
                    android:id="@+id/icon_start"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/calendarduoiphansukiensapdienra"
                    android:contentDescription="start" />

                <TextView
                    android:id="@+id/tv_event_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="27/12"
                    android:textColor="#4F4F4F"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/icon_end"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/calendarduoiphansukiensapdienra"
                    android:contentDescription="end" />

                <TextView
                    android:id="@+id/tv_event_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="27/12"
                    android:textColor="#4F4F4F"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

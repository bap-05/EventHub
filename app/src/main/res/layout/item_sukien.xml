<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_layersk"
        android:orientation="horizontal"
       >
        <ImageView
            android:id="@+id/img_saptoi_poster"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10sp"
           android:layout_marginTop="15sp"
            android:src="@drawable/poster"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_saptoi_thoigian"
                android:layout_marginTop="10sp"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="12/10-CN-7:00"
                android:textColor="#5669FF"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt_saptoi_noidung"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:text="Ngày hội tân sinh viên"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginTop="35sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/placeholder" />

                <TextView
                    android:id="@+id/txt_saptoi_coso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cơ sở 1"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>
                <Button
                    android:textColor="@color/white"
                    android:id="@+id/btn_saptoi_thamgia"
                    android:layout_width="120dp"
                    android:layout_height="37dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/custom_btn_danhmuc"
                    android:text="Chi tiết"
                    app:backgroundTint="@null"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
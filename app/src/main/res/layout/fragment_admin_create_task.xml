<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".View.Fragment.Admin.AdminCreateTaskFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:padding="8dp"
            android:background="@drawable/bg_input_field"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_title_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sự kiện"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/btn_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_container"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <LinearLayout
                android:id="@+id/form_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_otp_box"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_lbl_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hình ảnh sự kiện"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/layout_upload_image"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_dashed_border"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_upload"
                        app:tint="#4FB4F8" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_lbl_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Tiêu đề sự kiện" />

                <EditText
                    android:id="@+id/txt_event_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Nhập tên sự kiện"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:drawableStart="@drawable/ic_note"
                    android:drawablePadding="10dp" />

                <TextView
                    android:id="@+id/tv_lbl_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Mô tả sự kiện" />

                <EditText
                    android:id="@+id/txt_event_desc"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_input_field"
                    android:gravity="top|start"
                    android:hint="Mô tả"
                    android:padding="12dp"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/tv_lbl_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Loại sự kiện" />

                <EditText
                    android:id="@+id/txt_event_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Loại sự kiện"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@android:drawable/arrow_down_float"
                    android:drawableStart="@drawable/ic_loai_sk"
                    android:drawablePadding="10dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <TextView
                    android:id="@+id/tv_lbl_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Số lượng" />

                <EditText
                    android:id="@+id/txt_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Số lượng sinh viên"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@android:drawable/arrow_down_float"
                    android:drawableStart="@drawable/ic_so_luong"
                    android:drawablePadding="10dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <TextView
                    android:id="@+id/tv_lbl_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Điểm cộng" />

                <EditText
                    android:id="@+id/txt_points"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Điểm cộng"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@android:drawable/arrow_down_float"
                    android:drawableStart="@drawable/ic_diem_cong"
                    android:drawablePadding="10dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <TextView
                    android:id="@+id/tv_lbl_campus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Cơ sở" />

                <EditText
                    android:id="@+id/txt_campus"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Cơ sở"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@android:drawable/arrow_down_float"
                    android:drawableStart="@drawable/ic_diem_cong"
                    android:drawablePadding="10dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <TextView
                    android:id="@+id/tv_lbl_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Địa điểm" />

                <EditText
                    android:id="@+id/txt_location"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Địa điểm"
                    android:gravity="top|start"
                    android:padding="12dp"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/tv_lbl_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Thời gian bắt đầu" />

                <EditText
                    android:id="@+id/txt_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Thời gian bắt đầu"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                    android:drawableStart="@drawable/ic_diem_cong"
                    android:drawablePadding="10dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <TextView
                    android:id="@+id/tv_lbl_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Thời gian kết thúc" />

                <EditText
                    android:id="@+id/txt_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Thời gian kết thúc"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                    android:drawableStart="@drawable/ic_diem_cong"
                    android:drawablePadding="10dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@+id/form_container"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/footer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_create_task"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_button_blue"
            android:text="Thêm sự kiện"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
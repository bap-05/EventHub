<?xml version="1.0" encoding="UTF-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/search"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView

        android:layout_height="24dp"
        android:layout_width="28dp"
        android:id="@+id/img_search_back"
        app:srcCompat="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="58dp"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/img_search_back"
        app:layout_constraintStart_toEndOf="@+id/img_search_back"
        app:layout_constraintBottom_toBottomOf="@+id/img_search_back"
        android:textSize="22sp" android:text="Tìm kiếm"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:layout_height="24dp"
        android:layout_width="24dp"
        android:id="@+id/imageView3"
        app:srcCompat="@drawable/search_2"
        app:layout_constraintStart_toStartOf="@+id/img_search_back"
        app:layout_constraintEnd_toEndOf="@+id/img_search_back"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/img_search_back"/>

    <EditText android:layout_height="26dp"
        android:layout_width="wrap_content"
        android:background="@drawable/search_txt"
        android:id="@+id/editTextText"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        android:layout_marginLeft="12dp"
        android:paddingLeft="7dp"
        android:inputType="text"
        android:hint="Nhập..."
        android:ems="10"/>

    <Button
        android:layout_height="30dp"
        android:layout_width="80dp"
        android:background="@drawable/custom_btn_danhmuc"
        android:id="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/editTextText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/editTextText"
        android:text="Lọc"
        android:layout_marginRight="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        app:backgroundTint="@null"/>

    <ImageView
        android:layout_height="23dp"
        android:layout_width="23dp"
        android:id="@+id/imageView4"
        app:srcCompat="@drawable/filter_circle"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        android:layout_marginLeft="4dp"/>

    <androidx.fragment.app.FragmentContainerView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/footer_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="com.example.eventhub.View.Fragment.FooterFragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>
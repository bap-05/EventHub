<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="24dp"
    tools:context=".View.Fragment.Admin.StudentVerificationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgHeader"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:contentDescription="Ảnh nền"
            android:scaleType="centerCrop"
            android:src="@drawable/backgroud"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="-48dp"
            android:src="@drawable/avatar"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgHeader" />

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="56dp"
            android:paddingEnd="24dp"
            android:paddingBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgHeader">

            <TextView
                android:id="@+id/txtStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đinh Thu Hương"
                android:textColor="#111827"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtStudentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Mã Sinh Viên: 2311505312213"
                android:textColor="#111827"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtFaculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Khoa: Công Nghệ Thông Tin"
                android:textColor="#111827"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtProofTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Minh chứng"
                android:textColor="#111827"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/imgProof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="Ảnh minh chứng"
                    android:minHeight="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upload" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/commentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_input_field"
                android:gravity="center_vertical"
                android:padding="12dp">

                <EditText
                    android:id="@+id/edtComment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Write a comment..."
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="4"
                    android:padding="0dp"
                    android:textColor="@color/black"
                    android:textColorHint="#9AA0A6"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/btnSendComment"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Gửi bình luận"
                    android:padding="6dp"
                    android:src="@drawable/ic_send" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnReject"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_outline_red"
                    android:text="Từ chối"
                    app:backgroundTint="@null"
                    android:textAllCaps="false"
                    android:textColor="#EA5455"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnApprove"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_outline_green"
                    android:text="Chấp nhận"
                    app:backgroundTint="@null"
                    android:textAllCaps="false"
                    android:textColor="#28C76F"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtDecisionStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Trạng thái: Chờ duyệt"
                android:textColor="#6B7280"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

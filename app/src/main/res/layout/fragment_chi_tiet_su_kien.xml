<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".View.Fragment.KhachHang.ChiTietSuKienFragment">
    <ImageButton
        android:id="@+id/btn_ct_ql"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/back"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"/>
    <ImageView
        android:id="@+id/img_ct_poster"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/postersukien"/>
    <TextView
        android:id="@+id/txt_ct_noidung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chào đón tân sinh viên"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
       >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/calendar"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian:"
            android:textColor="#474747"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/txt_ct_thoigian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:00 14/10/2025"
            android:textColor="#474747"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/map"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa điểm:"
            android:textColor="#474747"
            android:textSize="18dp"
            android:layout_marginLeft="7dp"/>
        <TextView
            android:id="@+id/txt_ct_diadiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sảnh A trường SPKT"
            android:textColor="#474747"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/status"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái:"
            android:textColor="#474747"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/txt_ct_trangthai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sắp diễn ra"
            android:textColor="#474747"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/star"/>
        <TextView
            android:id="@+id/txt_ct_diemhd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 điểm hoạt động"
            android:textColor="#474747"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_ct_soluongthamgia"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#474747"
        android:textSize="18dp"
        android:text="Số lượng tham gia: 20/60"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#474747"
        android:textSize="18dp"
        android:text="Mô tả:"/>
    <TextView
        android:id="@+id/txt_ct_mota"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#474747"
        android:textSize="18dp"
        android:maxLines="5"
        android:ellipsize="end"
        android:text="Ngày hội Tân Sinh Viên 2025 là sự kiện thường niên được tổ chức nhằm chào đón các bạn tân sinh viên khóa 2025 bước vào hành trình học tập và trải nghiệm mới tại trường"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:layout_marginBottom="100dp"
        android:id="@+id/btn_ct_dk"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:text="Đăng ký"
        android:background="@drawable/custom_btn_danhmuc"
        app:backgroundTint="@null"
        android:textColor="@color/white"
        android:textSize="20dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="24dp"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_minhchung_poster"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="Ảnh nền"
                android:scaleType="centerCrop"
                android:src="@drawable/postersukien"
                />

            <TextView
                android:id="@+id/txt_minhchung_tensk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hội thao sinh viên 2025"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#111827"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_minhchung_thoigian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Thời gian: 2311505312213"
                android:layout_marginLeft="10dp"
                android:textColor="#111827"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Minh chứng"
                android:textColor="#111827"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/img_minhchung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="Ảnh minh chứng"
                    android:minHeight="300dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/upload" />
            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_minhchung_ql"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_outline_red"
                    app:backgroundTint="@null"
                    android:text="Quay lại"
                    android:textAllCaps="false"
                    android:textColor="#EA5455"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_minhchung_xacnhan"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_outline_green"
                    android:text="Xác nhận"
                    app:backgroundTint="@null"
                    android:textAllCaps="false"
                    android:textColor="#28C76F"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

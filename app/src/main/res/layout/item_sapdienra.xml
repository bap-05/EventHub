<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/custom_layersk"
    android:layout_height="250dp">

    <ImageView
        android:id="@+id/img_sapdienra_poster"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:src="@drawable/postersukien"/>
    <TextView
        android:id="@+id/txt_sapdienra_noidung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dance concert"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/txt_sapdienra_thoigian"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7:00 P.M - 9:00 P.M 12/10"
        android:textSize="16dp"
        android:textColor="@color/black"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_home_avt1"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/boy"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircleImageView"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_home_avt2"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/boy"
            app:shapeAppearanceOverlay="@style/CircleImageView"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_home_avt3"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="50sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/boy"
            app:shapeAppearanceOverlay="@style/CircleImageView"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_home_avt4"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="70sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/boy"
            app:shapeAppearanceOverlay="@style/CircleImageView"/>
        <Button
            android:id="@+id/btn_sapdienra_thamgia"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_btn_danhmuc"
            app:backgroundTint="@null"
            android:layout_marginRight="20sp"
            android:text="Chi tiáº¿t"
            android:textSize="12dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>